<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
   
    table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #D6EEEE;
} 

</style>
<body>
    <table>
        <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th> Action</th>
        </tr>

            <% for(let i=0; i < dataTable.length; i++) { %>
                <tr>
                  <td><%= dataTable[i].email %></td>
                  <td><%= dataTable[i].firstName %></td>
                  <td><%= dataTable[i].lastName %></td>
                  <td><%= dataTable[i].address %></td>
                  <td>
                    <a href= "/edit-crud?id=<%= dataTable[i].id %>" class="btn btn-warning">Edit</a>
                    <a href= "/delete-crud?id=<%= dataTable[i].id %>"class="btn btn-danger"> Delete</a>
                  </td>
                </tr>
             <% } %> 

      </table>
      
</body>
</html>